{
    "rest": {
        "RestGenerator": {
            "name": "Ollama API",
            "uri": "http://localhost:11434/api/generate",
            "method": "post",
            "headers": {
                "Content-Type": "application/json"
            },
            "req_template_json_object": {
                "model": "{model_name}",
                "prompt": "$INPUT",
                "stream": false
            },
            "response_json": true,
            "response_json_field": "response",
            "request_timeout": 60
        }
    }
} 